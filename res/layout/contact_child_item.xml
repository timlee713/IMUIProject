<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relative_setting_list_item"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/contact_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:background="#00ffffff"
            android:src="@drawable/ic_contact_photo" />
        <TextView
            android:id="@+id/contact_child_name"
            style="@style/setting_item_text_tip_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:ellipsize="end"
            android:text="profile"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <CheckBox
                android:id="@+id/btn_group_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="24dip"
                android:button="@drawable/single_checkbox" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_devide_line"
        style="@style/listview_divideline_style"
        android:layout_marginLeft="30dp"/>
</LinearLayout>